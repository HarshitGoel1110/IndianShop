<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayProductLast"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/displayLastImage"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="fitXY"
            android:src="@drawable/loginpage"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/displayLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/displayLastDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/displayLastPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/displayLastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:background="@color/pinkred"
            android:drawableTop="@drawable/welcome_button"
            android:drawableLeft="@drawable/welcome_button"
            android:drawableRight="@drawable/welcome_button"
            android:layout_marginTop="15dp"
            android:layout_gravity="bottom"
            android:elevation="15dp"
            android:clickable="true"/>


    </LinearLayout>

</FrameLayout>